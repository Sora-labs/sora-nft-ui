@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities {
    @variants responsive {
        .user-menu {
            min-width: calc(100vw - 48px);
            right: unset;
        }
        @media (min-width: 640px) {
            .user-menu {
                min-width: 300px;
                left: unset;
                right: 0;
            }    
        }
    }
}

@layer utilities {
    @variants responsive {
        .quote {
            max-width: 340px;
        }
        @media (min-width: 1280px) {
            .quote {
                max-width: 700px;
            }
        }
    }
}

@layer utilities {
    @variants responsive {
        .collection-wrapper {
            display: grid;
            grid-template-columns: 1fr;
        }
        @media (min-width: 1535px) {
            .collection-wrapper {
                grid-template-columns: 1fr minmax(min-content, 3fr);
                gap: 3rem;
            }
        }
    }
}

@layer utilities {
    @variants responsive {
        .nft-inner-wrapper {
            display: flex;
            flex-direction: column;
        }
        @media (min-width: 1024px) {
            .nft-inner-wrapper {
                width: 100%;
                display: grid;
                grid-template-columns: 2fr 1fr;
                grid-template-rows: auto auto;
                gap: 1.5rem;
            }
        }
    }
}

.grid-col-1 {
    grid-column: 1;
}

.wide-nft-wrapper {
    grid-column: 1 / span 2; 
}

.on-wide-nft-wrapper {
    grid-column: 2;
    grid-row: 2;
}

.on-skrink-nft-wrapper {
    grid-column: 2;
    grid-row: 1 / span 2;
}

@layer utilities {
    @variants responsive {
        .nft-card {
            min-width: 75vw;
        }
        @media (min-width: 640px) {
            .nft-card {
                min-width: 340px;
            }
        }
    }
}

@layer utilities {
    .hide-scrollbar {
        scrollbar-width: none;
        -ms-overflow-style: none;
    }

    .hide-scrollbar::-webkit-scrollbar {
        display: none
    }
}

@layer utilities {
    .nft-wrapper:hover .nft-view-tool {
        opacity: 1;
    }
}

.nft-view-tool {
    background: url('data:image/png;base64,') bottom repeat-x;
    width: 100%;
    padding-top: 100%;
    opacity: 0;
    transition: opacity 0.25s
}

.card {
    @apply flex rounded-lg overflow-hidden;
}

.pb-full {
    padding-bottom: 100%;
}

.overlay {
    display: none !important;
}

.nft-badge {
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
}

.grid-col-3 {
    grid-template-columns: repeat(3, 1fr);
}
/* Form style */
.form-field {
    @apply flex flex-col gap-2;
}

.form-field label {
    @apply text-light-gray-70;
}

.form-field input[type="text"], .form-field textarea {
    @apply bg-white dark:bg-dark-gray-80 shadow-sm px-4 py-4 rounded-lg relative outline-none;
}